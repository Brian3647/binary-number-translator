{
	"compilerOptions": {
		"target": "es5",
		"outDir": "dist",
		"rootDir": "lib",
		"isolatedModules": true,
		"strict": true,
		"baseUrl": "lib",
		"esModuleInterop": true,
		"lib": ["ES2020"],
		"declaration": true,
		"removeComments": false
	},
	"include": ["lib/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
